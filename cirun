#!/bin/sh
# | color   |   hue |
# |---------+-------|
# | red     |     0 |
# | yellow  | 12750 |
# | green   | 25500 |
# | blue    | 46920 |
# | magenta | 56100 |

# rubanner --font=electronic "$(pwd | sed -e 's/^.*\///')" bold on_blue
# rubanner --font=electronic "RUNNING" bold on_blue
if [ -e .rfg_project_name ]; then
    rubanner --font=electronic "$(cat .rfg_project_name)" white on_blue
else
    rubanner --font=electronic "$(pwd | sed -e 's/^.*\///')" white on_blue
fi
rubanner --font=electronic "RUNNING" white on_blue
if [ -e ~/onsite.touch ]; then
    echo "You're onsite! Skipping HUE lights."
else
    for light in 4 9; do
        curl -X PUT "http://$HUE_IP/api/$HUE/lights/$light/state" -d '{"on":true, "bri":254,"sat":254,"hue":46920, "transitiontime":0}' 2>/dev/null > /dev/null
    done
fi
