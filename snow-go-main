#!/bin/bash
# snow-go-main
echo WARNING! This will reset your warehouse and finance repos to the snowflake main branch.
echo HIT CTRL-C TO ABORT, PRESS ENTER OTHERWISE:
read
echo starting... &&

    echo -e "\033[36mcd ~/data_services/etl/warehouse/\033[0m" &&
    (cd ~/data_services/etl/warehouse/ &&

         echo -e "\033[36mgit co feature/snowflake-moveover\033[0m" &&
         git co feature/snowflake-moveover &&

         echo -e "\033[36mgit pull\033[0m" &&
         git pull) &&

    echo -e "\033[36mcd ~/data_services/etl/warehouse/finance\033[0m" &&
    (cd ~/data_services/etl/warehouse/finance &&

         echo -e "\033[36mgit co feature/snowflake-moveover\033[0m" &&
         git co feature/snowflake-moveover &&

         echo -e "\033[36mgit pull\033[0m" &&
         git pull) &&

    echo done.
