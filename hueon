#!/bin/sh
# | color   |   hue |
# |---------+-------|
# | red     |     0 |
# | yellow  | 12750 |
# | green   | 25500 |
# | blue    | 46920 |
# | magenta | 56100 |

curl -X PUT "http://192.168.0.66/api/$HUE/lights/9/state" -d  '{"on": true, "bri": 254, "hue": 14910, "sat": 144, "transitiontime":0}' 2>/dev/null > /dev/null
curl -X PUT "http://192.168.0.66/api/$HUE/lights/10/state" -d '{"on": true, "bri": 254, "hue": 14910, "sat": 144, "transitiontime":0}' 2>/dev/null > /dev/null
curl -X PUT "http://192.168.0.66/api/$HUE/lights/11/state" -d '{"on": true, "bri": 254, "hue": 14910, "sat": 144, "transitiontime":0}' 2>/dev/null > /dev/null

